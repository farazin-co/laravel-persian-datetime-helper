{
    "name": "novaday-co/laravel-persian-datetime-helper",
    "description": "Persian DateTime Helper for Laravel",
    "keywords": ["laravel", "persian", "jalali", "datetime"],
    "license": "MIT",
    "authors": [
        {
            "name": "Hossein Askari",
            "email": "h.askari.16@gmail.com"
        }
    ],
    "require": {
        "php": ">=7",
        "illuminate/support": "^6|^7|^8",
        "morilog/jalali": "3.*"
    },
    "require-dev" : {
        "phpunit/phpunit": "~8.0"
    },
    "autoload": {
        "psr-4": {
            "NovadayCo\\Datetime\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "NovadayCo\\Datetime\\Tests\\": "tests/"
        }
    },
    "minimum-stablity": "dev"
}
